{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && (auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "contracts": {
      "$contractId": {
        ".read": "auth != null && (data.child('senderId').val() === auth.uid || data.child('receiverId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && ((newData.child('senderId').val() === auth.uid) || (data.child('receiverId').val() === auth.uid) || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "market": {
      "$itemId": {
        ".read": "auth != null",
        ".write": "auth != null && (newData.child('sellerId').val() === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "admin": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    },
    ".read": "auth != null",
    ".write": "auth != null"
  }
}