
{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')",
        ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "market": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "contracts": {
      ".read": "auth != null",
      "$contractId": {
        // Allow write if user is creating a new contract, is the seller, or is the intended buyer
        ".write": "auth != null && (!data.exists() || data.child('sellerUid').val() === auth.uid || (data.child('buyerIdentifier').val() != null && (data.child('buyerIdentifier').val() === auth.uid || data.child('buyerIdentifier').val() === root.child('users').child(auth.uid).child('username').val())) || (data.child('buyerIdentifier').val() == null))"
      }
    },
    "chat": {
      "$chatRoomId": {
        ".read": "auth != null && ($chatRoomId === 'general' || $chatRoomId === 'trade' || $chatRoomId === 'help' || $chatRoomId.contains(auth.uid))",
        ".write": "auth != null"
      }
    },
    "chat-metadata": {
        ".read": "auth != null",
        ".write": "auth != null"
    },
    "marketShares": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "election": {
      ".read": "auth != null",
      "state": {
        ".write": "root.child('players').child(auth.uid).child('role').val() === 'admin'"
      },
      "presidentUid": {
        ".write": "root.child('players').child(auth.uid).child('role').val() === 'admin'"
      },
      "candidates": {
        ".write": "auth != null"
      },
      "votes": {
        ".write": "auth != null"
      }
    }
  }
}
