
{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin' || newData.child('payouts').exists())"
      }
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "market": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "contracts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "chat": {
      "$chatRoomId": {
        ".read": "auth != null && ($chatRoomId === 'general' || $chatRoomId === 'trade' || $chatRoomId === 'help' || $chatRoomId.contains(auth.uid))",
        ".write": "auth != null"
      }
    },
    "chat-metadata": {
        ".read": "auth != null",
        ".write": "auth != null"
    },
    "marketShares": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "election": {
      ".read": "auth != null",
      "state": {
        ".write": "root.child('players').child(auth.uid).child('role').val() === 'admin'"
      },
      "presidentUid": {
        ".write": "root.child('players').child(auth.uid).child('role').val() === 'admin'"
      },
      "candidates": {
        ".write": "auth != null"
      },
      "votes": {
        ".write": "auth != null"
      }
    }
  }
}
