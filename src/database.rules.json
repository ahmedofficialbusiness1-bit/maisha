
{
  "rules": {
    "users": {
      ".indexOn": "sector",
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || (root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'president'))",
        ".write": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "contracts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "market": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth.uid === $uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "chat": {
      "$chatRoomId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "chat-metadata": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "marketShares": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "election": {
      ".read": "auth != null",
      "state": {
        ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
      },
      "presidentUid": {
        ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
      },
      "candidates": {
        ".write": "auth != null"
      },
      "votes": {
        ".write": "auth != null"
      }
    },
    "economy": {
      ".read": "auth != null",
      ".write": "(root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'president')"
    },
    "treasury": {
      ".read": "root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'president'",
      ".write": "auth != null"
    },
    "officialPrices": {
      ".read": "auth != null",
      ".write": "(root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'president')"
    },
    "subsidies": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "nationalOrders": {
      ".read": "auth != null",
      ".write": "(root.child('users').child(auth.uid).child('role').val() === 'admin' || root.child('users').child(auth.uid).child('role').val() === 'president')"
    },
    ".read": "auth != null",
    ".write": "auth != null"
  }
}
