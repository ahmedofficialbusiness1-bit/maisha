
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "market": {
      ".read": "auth != null",
      "$listingId": {
        ".write": "auth != null"
      }
    },
    "chat": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "user-chats": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    }
  }
}


