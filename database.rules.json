
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $uid || (newData.child('money').val() !== data.child('money').val()) || (newData.child('inventory').val() !== data.child('inventory').val()) || (newData.child('notifications').val() !== data.child('notifications').val()) || (newData.child('transactions').val() !== data.child('transactions').val()))"
      }
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "market": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "contracts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "chat": {
      "$chatRoomId": {
        ".read": "auth != null && ($chatRoomId === 'general' || $chatRoomId === 'trade' || $chatRoomId === 'help' || $chatRoomId.beginsWith(auth.uid) || $chatRoomId.endsWith(auth.uid))",
        ".write": "auth != null"
      }
    },
    "chat-metadata": {
        ".read": "auth != null",
        ".write": "auth != null"
    }
  }
}

    


