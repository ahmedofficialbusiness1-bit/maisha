
{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "players": {
      ".read": "auth != null",
      ".indexOn": ["netWorth", "username"],
      "$uid": {
        ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')"
      }
    },
    "market": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "contracts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "chat": {
      "$chatRoomId": {
        ".read": "auth != null && ($chatRoomId === 'general' || $chatRoomId === 'trade' || $chatRoomId === 'help' || $chatRoomId.contains(auth.uid))",
        ".write": "auth != null"
      }
    },
    "chat-metadata": {
        ".read": "auth != null",
        ".write": "auth != null"
    },
    "marketShares": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "election": {
      ".read": "auth != null",
      "candidates": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$uid": {
            ".write": "auth != null && (auth.uid === $uid || root.child('players').child(auth.uid).child('role').val() === 'admin')"
        }
      },
      "votes": {
         ".read": "auth != null",
         "$uid": {
           ".write": "auth != null && auth.uid === $uid && !data.exists()",
           ".validate": "newData.isString()"
         }
      },
      "president": {
         ".write": "auth != null && root.child('players').child(auth.uid).child('role').val() === 'admin'"
      },
      "status": {
        ".write": "auth != null && root.child('players').child(auth.uid).child('role').val() === 'admin'"
      }
    }
  }
}
