{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "players": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      },
      ".indexOn": ["netWorth"]
    },
    "market": {
      ".read": "auth != null",
      "$listingId": {
        ".write": "auth != null && (!data.exists() || data.child('sellerUid').val() === auth.uid)"
      }
    },
    "chat": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
