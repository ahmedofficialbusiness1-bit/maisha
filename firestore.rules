
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the leaderboard for all users.
    // Writes are restricted: a user can only write to their own document,
    // identified by their UID. This prevents users from tampering with others' scores.
    match /leaderboard/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
